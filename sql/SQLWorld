## worldwide data / grouping

-- select *
-- from `capstone_project_dataset.flights_full`
-- limit 10

#1
SELECT
  airline_name,
  COUNT(*) AS flight_count,
  SUM(co2_emissions) AS total_co2,
  AVG(co2_emissions) AS avg_co2_per_flight
FROM `capstone_project_dataset.flights_full`
GROUP BY airline_name
ORDER BY total_co2 DESC;


